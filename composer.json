{
    "name": "chiron/chiron",
    "type": "library",
    "description": "Chiron is a PHP micro framework",
    "keywords": ["framework","micro","microframework","router"],
    "homepage": "https://github.com/ncou/Chiron",
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "ext-xml": "*",
        "ext-mbstring": "*",
        "ext-intl": "*",
        "chiron/core": "^1.0",
        "chiron/discover": "^1.0",
        "chiron/security": "^1.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "phpunit/phpunit": "^7.0",
        "phpstan/phpstan": "^0.9.2",
        "filp/whoops": "^2.2",
        "chiron/template": "^1.1",
        "nyholm/psr7": "^1.1"
    },
    "suggest": {
        "filp/whoops": "Enables use of the debug displayer."
    },
    "autoload": {
        "psr-4": {
            "Chiron\\": "src/"
        }
    },
    "autoload-dev" : {
        "psr-4": {
            "Chiron\\Tests\\" : "tests/"
        }
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpcs",
            "@phpstan"
        ],
        "phpunit": "phpunit --colors=always",
        "phpcs": "phpcs src",
        "phpstan": "phpstan analyse src --level=0",
        "test-coverage": "phpunit --coverage-clover clover.xml"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
