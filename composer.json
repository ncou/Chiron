{
    "name": "chiron/chiron",
    "type": "library",
    "description": "Chiron is a PHP micro framework",
    "keywords": ["framework","micro","microframework","router"],
    "homepage": "https://github.com/ncou/Chiron",
    "license": "MIT",
    "require": {
        "php": ">=7.1.3",
        "nyholm/psr7": "^0.3",
        "psr/http-message": "^1.0",
        "psr/container": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^1.0",
        "http-interop/http-factory": "^0.3"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "phpunit/phpunit": "^7.0",
        "phpstan/phpstan": "^0.9.2"
    },
    "autoload": {
        "psr-4": {
            "Chiron\\": "src/Chiron"
        }
    },
    "autoload-dev" : {
        "files": ["tests/OverwritePhpFunctions.php"],
        "psr-4": { "Chiron\\Tests\\" : "tests/" }
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpcs",
            "@phpstan"
        ],
        "phpunit": "phpunit --colors=always",
        "phpcs": "phpcs src",
        "phpstan": "phpstan analyse src --level=0",
        "test-coverage": "phpunit --coverage-clover clover.xml"
    }
}
