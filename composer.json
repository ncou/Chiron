{
    "name": "chiron/chiron",
    "type": "library",
    "description": "Chiron is a PHP micro framework",
    "keywords": ["framework","micro","microframework","router"],
    "homepage": "https://github.com/ncou/Chiron",
    "license": "MIT",
    "require": {
        "php": ">=7.1.3",
        "ext-intl": "*",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^1.0",
        "chiron/chiron-router": "^0.5",
        "chiron/http": "^0.2",
        "chiron/http-exceptions": "^1.0",
        "chiron/crypt-engine": "^0.1",
        "chiron/container": "^1.0",
        "chiron/template": "^1.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "phpunit/phpunit": "^7.0",
        "phpstan/phpstan": "^0.9.2",
        "filp/whoops": "^2.2",
        "chiron/logger": "^0.2"
    },
    "suggest": {
        "filp/whoops": "Enables use of the debug displayer."
    },
    "autoload": {
        "psr-4": {
            "Chiron\\": "src/Chiron/"
        }
    },
    "autoload-dev" : {
        "files": ["tests/Http/Middleware/OverwritePhpFunctions.php"],
        "psr-4": { "Chiron\\Tests\\" : "tests/" }
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpcs",
            "@phpstan"
        ],
        "phpunit": "phpunit --colors=always",
        "phpcs": "phpcs src",
        "phpstan": "phpstan analyse src --level=0",
        "test-coverage": "phpunit --coverage-clover clover.xml"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
